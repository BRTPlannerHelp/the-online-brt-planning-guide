{
	"prepare" : {
		"dockerfile" : {
			"type" : "path",
			"data" : ".robrt.Dockerfile"
		}
	},
	"build" : {
		"cmds" : [
			"cd $ROBRT_REPOSITORY_DIR",
			"haxe test.hxml",
			"haxe build.hxml",
			"mkdir -p $ROBRT_OUTPUT_DIR/spec",
			"bin/process < spec.txt > $ROBRT_OUTPUT_DIR/index.html"
		]
	}
}

